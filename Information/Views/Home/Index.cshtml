@model IEnumerable<Information.Models.Employee>

@{
    ViewBag.Title = "Home Page";
}


</br>

<div>
    @using (Html.BeginForm("EmployeeInfo", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group">

            <div class="col-md-12">
                <b>Employee ID</b> <input class="form-control" id="Id" name="Id" type="text" value="" required/>
            </div>
        </div>
        <div class="form-group">

            <input type="submit" class="btn btn-linkedin" value="Show Salary with Bonus" />
            <input type="button" class="btn btn-success" value="Highlight Salary"   onclick="highlightSalary()" />
            <input type="button" class="btn btn-info" value="Highlight Name"  onclick="highlightName()" />
        </div>
    }
</div>

@if (Model != null)
{
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Position</th>
            <th>Salary with bonus</th>
            <th>Join Date</th>
        </tr>
        @foreach (var item in Model)

        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td id="name">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td id="Salary">
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JoinDate)
                </td>
            </tr>
        }


    </table>
}

<script>
    function highlightSalary() {
        document.getElementById("Salary").style.color = "green";
    }
    function highlightName() {
        document.getElementById("name").style.color = "blue";
    }
</script>

